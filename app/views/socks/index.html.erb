
<div class="container">
  <br>
  <br>
  <% if @any_my_socks %>
    <div class="card text-center">
      <h1>Your sock collection:</h1>
    </div>
    <h5 class="card text-center"; style="font-size:500%">Your lonely socks</h5>
    <div class="row">
      <% @my_active_socks.each do |sock| %>
        <div class="col-6">
            <div class="card"; class="center" >
              <div class="card-body">
                <div class="sock_card">
                  <%= link_to image_tag("sock_card.png", alt: "Le Wagon", width: 200), sock_path(sock) %>
                  <p class="card-text"> This sock belongs to <%= sock.user.email %></p>
                </div>
                  <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Textile</strong> : <%= sock.textile %></li>
                    <li class="list-group-item"><strong>Color</strong> : <%= sock.color %></li>
                    <li class="list-group-item"><strong>Price</strong> : <%= sock.price.symbol %> <%= sock.price %></li>
                  </ul>
                  <div class="card-body">
                    <button type="button" class="btn_small">  <%= link_to 'Edit sock', edit_sock_path(sock), method: :get%> </button>
                  </div>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

