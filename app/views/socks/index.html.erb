
<div class="container">
  <br>
  <br>
  <% if @my_socks != [] %>
    <div class="card text-center">
      <h1>Your sock collection:</h1>
    </div>
    <h5 class="card text-center"; style="font-size:500%">Your lonely socks</h5>
    <div class="row">
      <% @my_socks.each do |sock| %>
        <div class="col-6">
            <div class="card"; class="center" >
              <div class="card-body">
                <div class="sock_card">
                  <%= image_tag "sock_card.png", alt: "Le Wagon", width: 200 %>
                  <p class="card-text"> This sock belongs to <%= sock.user %></p>
                </div>
                  <% if sock.status == 'active' %>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Textile</strong> : <%= sock.textile %></li>
                        <li class="list-group-item"><strong>Color</strong> : <%= sock.color %></li>
                        <li class="list-group-item"><strong>Price</strong> : <%= sock.price.symbol %> <%= sock.price %></li>
                      </ul>
                      <div class="card-body">
                        <button type="button" class="btn_small">  <%= link_to 'Show sock', sock_path(sock), method: :get%> </button>
                        <button type="button" class="btn_small">  <%= link_to 'Edit sock', edit_sock_path(sock), method: :get%> </button>
                      </div>
                  <% else %>
                    <div class="card-body">
                      <h5 class="card text-center"; style="font-size:200%"><strong> All Socks have been sold...</strong></h5>
                    </div>
                  <% end %>
              </div>
            </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

