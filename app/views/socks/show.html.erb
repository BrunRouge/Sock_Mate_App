<div class="container">
  <h2>Look at this sock:</h2>
  <p><%= @sock.textile %></p>
  <p><%= @sock.color %></p>
  <p><%= @sock.size %></p>
  <p><%= @sock.price %></p>
  <%= link_to "Delete", sock_path(@sock), method: :delete, data: { confirm: "Are you sure?" } %>
  <p><%= link_to 'Back to all socks', socks_path, method: :get%> </p>
</div>
